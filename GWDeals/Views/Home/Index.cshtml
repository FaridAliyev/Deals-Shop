@model HomeVM
@{
    ViewData["Title"] = "GWDeals";

}
<section class="rt-banner-area default-slider">
    <div class="rt-slider-active owl-carousel">
        <div class="single-rt-banner rt-banner-height rtbgprefix-full" style="background-image: url(images/banner_01.png);">
            <div class="rt-inner-overlay move-1" style="background-image: url(images/slider-overlay.png);">
            </div><!-- /.rt-inner-overlay -->
            <div class="container">
                <div class="row  rt-banner-height align-items-center">
                    <div class="col-lg-6">
                        <div class="rt-banner-content text-white">
                            @if (ViewBag.Ordered == true)
                            {
                                <div class="alert alert-success">Order Placed Successfully!</div>
                            }
                            @if (ViewBag.Subscribed == 1)
                            {
                                <div class="alert alert-success">Successfully Subscribed!</div>
                            }
                            @if (ViewBag.Subscribed == 2)
                            {
                                <div class="alert alert-warning">You are already a subscriber!</div>
                            }
                            <h1>
                                <span class="d-block f-size-36 f-size-xs-18 rt-light1 rt-mb-10" data-duration="1s" data-dealy="0.3s" data-animation="wow fadeInUp">
                                    Welcome
                                </span>
                                <span class="f-size-40 f-size-xs-24 rt-strong rt-mb-13 d-block " data-duration="1s" data-dealy="0.3s" data-animation="wow fadeInDown">
                                    @Model?.User?.Name @Model?.User?.Surname
                                </span>
                            </h1>
                            <h4 class="f-size-20 f-size-xs-16 rt-light1" data-duration="1.5s" data-dealy="0.6s" data-animation="wow fade-in-left">
                                Get familiar with the latest GW Deals now!
                            </h4>
                        </div><!-- end banner content -->
                    </div><!-- end column -->
                    <div class="col-lg-6 d-lg-block d-none">
                        <div class="banner-add-img">
                            <img src="images/SpecialOffer.png" alt="pc image" draggable="false" class="front-img" data-duration="2s" data-dealy="1s" data-animation="fade-in-bottom">
                            <img src="images/sold_tag.png" alt="sold image" draggable="false" class="sold_img" data-duration="2.4s" data-dealy="1.4s" data-animation="zoomIn">
                        </div><!-- /.banner-add-img -->
                    </div><!-- /.col-lg-6 -->
                </div><!-- end row -->
            </div><!-- end container -->
        </div><!-- end single rt banner -->
        <div class="single-rt-banner rt-banner-height rtbgprefix-full" style="background-image: url(images/banner_01.png);">
            <div class="rt-inner-overlay move-1" style="background-image: url(images/slider-overlay.png);">
            </div><!-- /.rt-inner-overlay -->
            <div class="container">
                <div class="row  rt-banner-height align-items-center">
                    <div class="col-lg-6">
                        <div class="rt-banner-content text-white">

                            <h1>
                                <span class="d-block f-size-24 f-size-xs-18 rt-light1 rt-mb-10" data-duration="1s" data-dealy="0.3s" data-animation="wow fadeInUp">
                                    I would like
                                    to
                                </span>
                                <span class="f-size-40 f-size-xs-24 rt-strong rt-mb-13 d-block" data-duration="1s" data-dealy="0.3s" data-animation="wow fadeInDown">
                                    Buy
                                    Domains
                                </span>
                            </h1>
                            <h4 class="f-size-20 f-size-xs-16 rt-light1" data-duration="1.5s" data-dealy="0.6s" data-animation="wow fade-in-left">
                                Now it’s even easier to buy and sell
                                premium
                            </h4>
                            <form action="#" class="rt-mt-30 domain-searh-form" data-duration="1.8s" data-dealy="0.9s" data-animation="wow fadeInUp">
                                <select>
                                    <option value=".com">.com</option>
                                    <option value=".in">.in</option>
                                    <option value=".net">.net</option>
                                    <option value=".org">.org</option>
                                </select>
                                <input type="text" placeholder="enter a new search">
                                <button class="rt-btn rt-gradient pill rt-Bshadow-1" type="submit">
                                    Check <span><i class="icofont-simple-right"></i></span>
                                </button>
                            </form>
                        </div><!-- end banner content -->
                    </div><!-- end column -->
                    <div class="col-lg-6 d-lg-block d-none">
                        <div class="banner-add-img">
                            <img src="images/pc2.png" alt="pc image" draggable="false" class="front-img" ata-duration="2s" data-dealy="1s" data-animation="fade-in-bottom">

                        </div><!-- /.banner-add-img -->
                    </div><!-- /.col-lg-6 -->
                </div><!-- end row -->
            </div><!-- end container -->
        </div><!-- end single rt banner -->
    </div><!-- /.rt-slider-active -->
</section>
<div class="rt-spacer-80 rt-spacer-xs-50"></div>
<section class="feature-area">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-8 mx-auto text-center wow fade-in-bottom" data-wow-duration="1s">
                <h2 class="rt-section-title">
                    Hot Deals
                </h2>
            </div><!-- /.col-xl-6 col-lg-8 mx-auto text-center wow fade-in-bottom -->
        </div><!-- /.row -->
        <div class="rt-spacer-25"></div><!-- /.rt-spacer-25 -->
        <div class="row">
            <div class="col-12">

                <div class="feature-active owl-carousel">
                    @foreach (Deal item in Model.Deals)
                    {
                        @if (item.EndTime > DateTime.UtcNow.AddHours(4))
                        {

                            <div class="single-feature-item wow fade-in-bottom">
                                <a class="rt-feature-box rt-rounded-10 rt-p-20" href="#">
                                    <span class="f-size-18 d-block">@item.Item.Name</span>
                                    <div class="img-fluid">
                                        <img src="~/images/@item.Item.Image" style="min-height: 245px; object-fit: contain" />
                                    </div>
                                    <span class="f-size-18 d-block">Quantity: @item.Amount</span>

                                    <ul class="clearfix rt-list">
                                        <li class="float-left">
                                            @(Math.Ceiling((item.EndTime.GetValueOrDefault()-item?.StartTime.GetValueOrDefault()).Value.TotalDays))
                                            days left
                                        </li>
                                        <li class="float-right">
                                            <del>$@item.NormalPrice</del>
                                            $@item.DiscountedPrice
                                        </li>
                                    </ul>
                                </a>
                                <a asp-controller="Home" asp-action="Order" asp-route-id="@item.Id" class="btn btn-lg btn-primary btn-block" style="color: white;">Order</a>
                            </div>
                        }

                    }

                </div>
            </div>


        </div><!-- /.row -->
    </div><!-- /.container -->
</section>
